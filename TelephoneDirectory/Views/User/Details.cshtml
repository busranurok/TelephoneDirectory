@model UserViewModel
@{
    ViewBag.Title = "Details";
}

<div class="form-group">
    <label>Ad</label>
    <p>@Model.User.Name</p>
</div>
<div class="form-group">
    <label>Soyad</label>
    <p>@Model.User.Lastname</p>
</div>
<div class="form-group">
    <label>Kullanıcı Ad</label>
    <p>@Model.User.Username</p>
</div>
<div class="form-group">
    <label>Telefon</label>
    <p>@Model.User.PhoneNumber</p>
</div>
@if (ViewBag.IsCurrentUserAdmin == false)
{
    <style>
        .navbar {
            display: none;
        }
    </style>
}
@Html.ActionLink("Listeye Dön", "List")

