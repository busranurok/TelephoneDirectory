@model DepartmentViewModel
@{
    ViewBag.Title = "Index";
}


@using (Html.BeginForm("Save", "Department", FormMethod.Post))
{
    <input value="@Model.Department.DepartmentId" hidden name="Department.DepartmentId" />

    <div class="form-group">
        <label>Departman Adı</label>
        <br />
        <input type="text" class="form-control" placeholder="Departman Adı" name="Department.DepartmentName" value="@Model.Department.DepartmentName" />
    </div>
    <div class="form-group">
        <label>Departman Açıklaması</label>
        <br />
        @*Value vermemizin sebebi düzenlemeyi de index.cshtml sayfasında yapmak istememizden kaynaklanır.farklı sayfada yapsa idik yazmayacaktık ama editleme yaptığımızda yazmamız gerekirdi çünkü veriyi ekrana basması gerekirdi.*@
        @*name kısmı modelin içini doldurmak için kullanılır*@
        <input type="text" class="form-control" name="Department.DepartmentDescription" placeholder="Departman Açıklaması" value="@Model.Department.DepartmentDescription" />
    </div>
    <div>
        <input type="submit" class="btn btn-success" value="KAYDET" />
    </div>
}